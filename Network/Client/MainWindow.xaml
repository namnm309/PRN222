<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chat Client" Height="540" Width="920" Background="#f5f7fb" Foreground="#1a1a1a">
    <Window.Resources>
        <SolidColorBrush x:Key="AccentBrush" Color="#2563eb"/>
        <SolidColorBrush x:Key="CardBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="HeaderStripBlue" Color="#dbeafe"/>
        <SolidColorBrush x:Key="HeaderStripCyan" Color="#cffafe"/>
        <SolidColorBrush x:Key="HeaderStripGreen" Color="#dcfce7"/>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#d9dce3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f3f9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#e6ebf5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type local:ChatImage}">
            <StackPanel>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold"/>
                <Image Source="{Binding Image}" MaxHeight="200" Stretch="Uniform"/>
                <TextBlock>
                    <Hyperlink Click="OpenSaveForImage_Click">
                        <Run Text="{Binding FileName, Mode=OneWay}" />
                    </Hyperlink>
                    <Run Text=" – nhấn để lưu" Foreground="Gray"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ChatFile}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📄" FontSize="16" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold" Margin="0,0,6,0"/>
                <TextBlock Text=": "/>
                <TextBlock>
                    <Hyperlink Click="OpenSaveForFile_Click">
                        <Run Text="{Binding FileName, Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text=" (" Foreground="Gray"/>
                <TextBlock Text="{Binding DisplaySize, Mode=OneWay}" Foreground="Gray"/>
                <TextBlock Text=")" Foreground="Gray"/>
                <TextBlock Text=" – nhấn để lưu" Foreground="Gray" Margin="6,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- cấu hình -->
            <RowDefinition Height="*"/>   <!-- tin nhắn -->
            <RowDefinition Height="Auto"/> <!-- nhập -->
            <RowDefinition Height="Auto"/> <!-- tiến độ -->
        </Grid.RowDefinitions>

