<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type local:ChatImage}">
            <StackPanel>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold"/>
                <Image Source="{Binding Image}" MaxHeight="200" Stretch="Uniform"/>
                <TextBlock Text="{Binding FileName, Mode=OneWay}" FontStyle="Italic"/>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ChatFile}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📄" FontSize="16" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold" Margin="0,0,6,0"/>
                <TextBlock Text=": "/>
                <TextBlock>
                    <Hyperlink Click="OpenSaveForFile_Click">
                        <Run Text="{Binding FileName, Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text=" (" Foreground="Gray"/>
                <TextBlock Text="{Binding DisplaySize, Mode=OneWay}" Foreground="Gray"/>
                <TextBlock Text=")" Foreground="Gray"/>
                <TextBlock Text=" – nhấn để lưu" Foreground="Gray" Margin="6,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- cấu hình -->
            <RowDefinition Height="*"/>   <!-- tin nhắn -->
            <RowDefinition Height="Auto"/> <!-- nhập -->
        </Grid.RowDefinitions>

        <!-- cấu hình -->
        <StackPanel Orientation="Horizontal" Margin="5">
            <Label Content="Tên:" VerticalAlignment="Center"/>
            <TextBox x:Name="NameBox" Width="120" Text="Client" Margin="0,0,5,0"/>
            <Label Content="Host:" VerticalAlignment="Center"/>
            <TextBox x:Name="HostBox" Width="120" Text="192.168.0.151" Margin="0,0,5,0" TextChanged="HostBox_TextChanged"/>
            <Label Content="Port:" VerticalAlignment="Center"/>
            <TextBox x:Name="PortBox" Width="60"  Text="13000" Margin="0,0,5,0"/>
            <Button x:Name="ConnectBtn" Content="Kết nối" Click="ConnectBtn_Click" Width="80"/>
            <Button x:Name="ChangeNameBtn" Content="Đổi tên" Click="ChangeNameBtn_Click" Width="80" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Danh sách tin nhắn -->
        <ListBox x:Name="Messages" Grid.Row="1" Margin="5" FontFamily="Segoe UI Emoji"/>

        <!-- Khu vực nhập -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="InputBox" Grid.Column="0" KeyDown="InputBox_KeyDown" FontFamily="Segoe UI Emoji"/>
            <Button x:Name="EmojiBtn" Grid.Column="1" Content="😀" Width="40" Margin="5,0,0,0" Click="EmojiBtn_Click"/>
            <Button x:Name="ImageBtn" Grid.Column="2" Content="🖼" Width="40" Margin="5,0,0,0" Click="ImageBtn_Click"/>
            <Button x:Name="FileBtn" Grid.Column="3" Content="📁" Width="40" Margin="5,0,0,0" Click="FileBtn_Click"/>
            <Button x:Name="SendBtn" Grid.Column="4" Content="Gửi" Width="80" Margin="5,0,0,0" Click="SendBtn_Click"/>
        </Grid>
    </Grid>
</Window>
