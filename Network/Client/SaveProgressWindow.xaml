<Window x:Class="Client.SaveProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đang lưu..." WindowStyle="ToolWindow" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner" Topmost="True">
    <StackPanel Margin="16">
        <TextBlock x:Name="StatusText" Text="Đang lưu..." Margin="0,0,0,8"/>
        <ProgressBar x:Name="Progress" Width="320" Height="14" Minimum="0" Maximum="100"/>
    </StackPanel>
</Window>
