<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Chat Server" Height="540" Width="980" Background="#f5f7fb" Foreground="#1a1a1a">
    <Window.Resources>
        <SolidColorBrush x:Key="CardBrush" Color="#ffffff"/>
        <SolidColorBrush x:Key="CardBorderBrush" Color="#e5e7eb"/>
        <SolidColorBrush x:Key="HeaderStripAmber" Color="#fef3c7"/>
        <SolidColorBrush x:Key="HeaderStripBlue" Color="#dbeafe"/>
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ffffff"/>
            <Setter Property="Foreground" Value="#1a1a1a"/>
            <Setter Property="BorderBrush" Value="#d9dce3"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f0f3f9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#e6ebf5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DataTemplate DataType="{x:Type local:ChatImage}">
            <StackPanel>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold" Margin="0,0,0,4"/>
                <Image Source="{Binding Image}" MaxHeight="200" Stretch="Uniform"/>
                <TextBlock>
                    <Hyperlink Click="OpenSaveForImage_Click">
                        <Run Text="{Binding FileName, Mode=OneWay}" />
                    </Hyperlink>
                    <Run Text=" – nhấn để lưu" Foreground="Gray"/>
                </TextBlock>
            </StackPanel>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:ChatFile}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📄" FontSize="16" Margin="0,0,6,0"/>
                <TextBlock Text="{Binding Sender, Mode=OneWay}" FontWeight="Bold" Margin="0,0,6,0"/>
                <TextBlock Text=": "/>
                <TextBlock>
                    <Hyperlink Click="OpenSaveForFile_Click">
                        <Run Text="{Binding FileName, Mode=OneWay}" />
                    </Hyperlink>
                </TextBlock>
                <TextBlock Text=" (" Foreground="Gray"/>
                <TextBlock Text="{Binding DisplaySize, Mode=OneWay}" Foreground="Gray"/>
                <TextBlock Text=")" Foreground="Gray"/>
                <TextBlock Text=" – nhấn để lưu" Foreground="Gray" Margin="6,0,0,0"/>
            </StackPanel>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <Border Margin="10" Grid.ColumnSpan="2" Style="{StaticResource CardBorder}">
            <StackPanel>
                <Border Height="4" CornerRadius="6" Background="{StaticResource HeaderStripAmber}"/>
                <Label x:Name="StatusLabel" Content="Đang khởi động..." FontWeight="Bold"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="1" Grid.Column="0" Margin="10" Style="{StaticResource CardBorder}" Padding="6">
            <StackPanel>
                <Border Height="4" CornerRadius="6" Background="{StaticResource HeaderStripBlue}"/>
                <ListBox x:Name="LogList" FontFamily="Segoe UI Emoji" Background="Transparent" BorderThickness="0"/>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" Margin="10" Style="{StaticResource CardBorder}" Padding="6">
            <StackPanel>
                <TextBlock Text="Clients" FontWeight="Bold" Margin="5"/>
                <ListBox x:Name="ClientList" />
            </StackPanel>
        </Border>

        <!-- Khu vực nhập -->
        <Border Grid.Row="2" Margin="10" Grid.ColumnSpan="2" Style="{StaticResource CardBorder}">
            <StackPanel>
                <Border Height="4" CornerRadius="6" Background="{StaticResource HeaderStripAmber}"/>
        <Grid Margin="0,6,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox x:Name="ServerInput" Grid.Column="0" KeyDown="ServerInput_KeyDown" FontFamily="Segoe UI Emoji"/>
            <Button Content="😀" Grid.Column="1" Width="40" Margin="5,0,0,0" Click="ServerEmoji_Click"/>
            <Button Content="🖼" Grid.Column="2" Width="40" Margin="5,0,0,0" Click="ServerImage_Click"/>
            <Button Content="📁" Grid.Column="3" Width="40" Margin="5,0,0,0" Click="ServerFile_Click"/>
            <Button Content="Gửi" Grid.Column="4" Width="80" Margin="5,0,0,0" Click="ServerSend_Click"/>
        </Grid>
            </StackPanel>
        </Border>

        <Border Grid.Row="3" Grid.ColumnSpan="2" Margin="10" Style="{StaticResource CardBorder}" Padding="10">
            <StackPanel>
                <Border Height="4" CornerRadius="6" Background="{StaticResource HeaderStripBlue}"/>
                <TextBlock Text="Tiến độ gửi file từ server" FontWeight="Bold" Margin="0,0,0,6"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Gửi:" Width="40"/>
                    <ProgressBar x:Name="ServerSendProgress" Height="10" Minimum="0" Maximum="100" Width="320"/>
                    <TextBlock x:Name="ServerSendProgressText" Margin="10,0,0,0"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
